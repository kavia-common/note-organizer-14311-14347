---
import ThemeToggle from '../components/ThemeToggle.astro';
const title = "Notes";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div class="app">
      <header class="app-header">
        <div class="brand">
          <div class="dot"></div>
          <h1>Notes</h1>
        </div>
        <div class="header-actions">
          <slot name="header-actions" />
        </div>
      </header>
      <div class="app-body">
        <aside class="sidebar">
          <nav>
            <a class="nav-item active" href="/">All Notes</a>
            <a class="nav-item" href="#" aria-disabled="true" tabindex="-1">Pinned (soon)</a>
            <a class="nav-item" href="#" aria-disabled="true" tabindex="-1">Archived (soon)</a>
          </nav>
          <footer class="sidebar-footer">
            <small>Minimalistic â€¢ Light</small>
          </footer>
        </aside>
        <main class="main">
          <slot />
        </main>
      </div>
    </div>
    <ThemeToggle />
  </body>
</html>

<style>
  :root {
    /* Color palette (light) */
    --color-primary: #3B82F6;   /* blue-500 */
    --color-secondary: #64748B; /* slate-500 */
    --color-accent: #F59E42;    /* orange-ish accent */

    --bg-color: #ffffff;
    --bg-soft: #f8fafc;
    --text-color: #0f172a;
    --text-secondary: #475569;
    --border-color: #e2e8f0;
    --card-bg: #ffffff;
    --card-hover-bg: #fdfdfd;
    --shadow-color: rgba(15, 23, 42, 0.06);
  }

  body.dark-theme {
    /* Dark theme variants (kept subtle but supported by ThemeToggle) */
    --bg-color: #0b1220;
    --bg-soft: #0f172a;
    --text-color: #e5e7eb;
    --text-secondary: #cbd5e1;
    --border-color: #1f2937;
    --card-bg: #0f172a;
    --card-hover-bg: #111827;
    --shadow-color: rgba(0, 0, 0, 0.3);
  }

  html, body {
    margin: 0;
    width: 100%;
    height: 100%;
    background: var(--bg-color);
    color: var(--text-color);
    font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Noto Sans, Ubuntu, Cantarell, Helvetica Neue, Arial, "Apple Color Emoji","Segoe UI Emoji";
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }

  .app {
    display: grid;
    grid-template-rows: 56px 1fr;
    min-height: 100dvh;
  }

  .app-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 16px;
    border-bottom: 1px solid var(--border-color);
    background: var(--card-bg);
    position: sticky;
    top: 0;
    z-index: 10;
  }

  .brand {
    display: flex;
    align-items: center;
    gap: 10px;
  }

  .brand .dot {
    width: 12px;
    height: 12px;
    background: linear-gradient(135deg, var(--color-primary), var(--color-accent));
    border-radius: 50%;
    box-shadow: 0 0 0 3px color-mix(in oklab, var(--color-primary), transparent 85%);
  }

  .brand h1 {
    margin: 0;
    font-size: 18px;
    font-weight: 600;
    letter-spacing: 0.2px;
  }

  .app-body {
    display: grid;
    grid-template-columns: 240px 1fr;
    min-height: 0;
  }

  .sidebar {
    border-right: 1px solid var(--border-color);
    background: var(--bg-soft);
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    padding: 12px;
    gap: 8px;
  }

  .nav-item {
    display: block;
    color: var(--text-secondary);
    text-decoration: none;
    padding: 10px 12px;
    border-radius: 10px;
    transition: background .15s ease, color .15s ease;
  }
  .nav-item:hover {
    background: var(--card-bg);
    color: var(--text-color);
  }
  .nav-item.active {
    background: color-mix(in oklab, var(--color-primary) 12%, var(--card-bg));
    color: var(--text-color);
    border: 1px solid color-mix(in oklab, var(--color-primary) 35%, var(--border-color));
  }

  .sidebar-footer {
    color: var(--text-secondary);
    padding: 8px 12px;
  }

  .main {
    min-width: 0;
    padding: 16px;
  }

  @media (max-width: 880px) {
    .app-body { grid-template-columns: 1fr; }
    .sidebar { display: none; }
  }
</style>
